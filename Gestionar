# Crear el archivo difamaciones.py

# difamaciones.py
import spacy

nlp = spacy.load("es_core_news_md")

def identificar_difamaciones(texto):
    doc = nlp(texto)
    difamaciones_detectadas = []
    # L贸gica para identificar difamaciones
    for token in doc:
        if token.lower_ in ["difamaci贸n", "calumnia", "injuria"]:
            difamaciones_detectadas.append(token.text)
    return difamaciones_detectadas

# Prueba de la funci贸n
if __name__ == "__main__":
    texto = "Este es un ejemplo de difamaci贸n y calumnia."
    print(identificar_difamaciones(texto))

