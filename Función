# Mock de la función de spaCy para propósitos de prueba
def mock_identificar_difamaciones(texto):
    palabras_clave = ["difamación", "calumnia", "injuria"]
    return [palabra for palabra in texto.split() if palabra in palabras_clave]

# Pruebas unitarias usando la función mock
class TestDifamaciones(unittest.TestCase):

    def test_identificar_difamaciones(self):
        self.assertEqual(mock_identificar_difamaciones("Este es un ejemplo de difamación y calumnia."), ["difamación", "calumnia"])

# Ejecutar las pruebas
unittest.TextTestRunner().run(unittest.makeSuite(TestDifamaciones))
