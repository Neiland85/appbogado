from appbogado.defense_strategies import exigir_pruebas, destruir_argumento_insostenible

acusacion = "Usted es culpable de fraude."
# Generar una solicitud para exigir pruebas
respuesta_pruebas = exigir_pruebas(acusacion)
# Generar un argumento para destruir la acusaciÃ³n insostenible
respuesta_destruir = destruir_argumento_insostenible(acusacion)
print("Respuesta para exigir pruebas:", respuesta_pruebas)
print("Respuesta para destruir argumento insostenible:", respuesta_destruir)

